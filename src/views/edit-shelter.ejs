<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <!-- Select2 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/select.css">
  </head>
  <body class="bg-gray-900 text-white flex flex-col min-h-screen">
    <!-- Header -->
    <%- include('partials/header') %>

    <!-- Main Content -->
    <main class="flex-grow container mx-auto px-4 py-8">
      <h1 class="text-4xl font-bold mb-8 text-center">Edit Shelter</h1>

      <form action="/shelters/<%= shelter.id %>/edit" method="POST" class="space-y-4">
        <div>
          <label for="name" class="block text-lg">Shelter Name:</label>
          <input
            type="text"
            id="name"
            name="name"
            value="<%= shelter.name %>"
            required
            class="w-full p-2 rounded bg-gray-800 text-white"
          />
        </div>

        <div>
          <label for="location" class="block text-lg">Location:</label>
          <input
            type="text"
            id="location"
            name="location"
            value="<%= shelter.location %>"
            required
            class="w-full p-2 rounded bg-gray-800 text-white"
          />
        </div>

        <div>
          <label for="latitude" class="block text-lg">Latitude:</label>
          <input
            type="number"
            id="latitude"
            name="latitude"
            step="any"
            value="<%= shelter.latitude %>"
            class="w-full p-2 rounded bg-gray-800 text-white"
          />
        </div>

        <div>
          <label for="longitude" class="block text-lg">Longitude:</label>
          <input
            type="number"
            id="longitude"
            name="longitude"
            step="any"
            value="<%= shelter.longitude %>"
            class="w-full p-2 rounded bg-gray-800 text-white"
          />
        </div>

        <div>
          <label for="description" class="block text-lg">Description (Tags):</label>
          <select id="description" name="description[]" multiple class="select2 w-full p-2 rounded bg-gray-800">
            <% availableTags.forEach(tag => { %>
            <option value="<%= tag %>" <% if (shelter.description.includes(tag)) { %> selected <% } %>><%= tag %></option>
            <% }) %>
          </select>
        </div>

        <div>
          <label for="needs" class="block text-lg">Needs:</label>
          <select id="needs" name="needs[]" multiple class="select2 w-full p-2 rounded bg-gray-800">
            <% availableNeeds.forEach(need => { %>
            <option value="<%= need %>" <% if (shelter.needs.includes(need)) { %> selected <% } %>><%= need %></option>
            <% }) %>
          </select>
        </div>

        <button type="submit" class="bg-blue-600 hover:bg-blue-500 text-white font-semibold py-2 px-4 rounded">
          Update Shelter
        </button>
      </form>

      <a href="/profile" class="block text-blue-400 hover:text-blue-600 mt-4">Back to Shelter List</a>
    </main>

    <!-- Footer -->
    <%- include('partials/footer') %>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
      $(document).ready(function () {
        $(".select2").select2();
      });
    </script>
  </body>
</html>